@model Library.Models.CatalogViewModel
@{
    ViewData["Title"] = "Return Books";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="bg-dark py-5">
        <div class="container px-4 px-lg-5 my-5">
            <div class="text-center text-white">
                <h1 class="display-4 fw-bolder">Return Book</h1>
                <p class="lead fw-normal text-white-50 mb-0">Select a book from the list to return.</p>
            </div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-8 mx-auto">
            @if(Model.Books.Count() > 0) {
                @using (Html.BeginForm("ReturnBook", "Home", FormMethod.Post))
                {
                    <div class="form-group">
                        <label for="bookID" class="lead">Books</label>
                            <select id="bookID" name="bookID" class="form-control" required>
                                <option selected disabled>~ Select Book ~</option>
                                @foreach (var item in Model.Books)
                                {
                                    <option id="@item.uID" name="@item.uID" value="@item.uID">@item.vcTitle by @item.vcAuthor</option>
                                }
                            </select>
                    </div>
                    <button id="submit" type="submit" class="mt-3 btn btn-primary">Return</button>
                }
            }
            else {
                <div class="gx-4 gx-lg-5 justify-content-center">
                    <h5 class="text-center mt-3">
                        You have no books checked out.
                    </h5>
                </div>
            }
        </div>
    </div>
</div>