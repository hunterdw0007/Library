@{
    ViewData["Title"] = "Create Account";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="bg-dark py-5">
        <div class="container px-4 px-lg-5 my-5">
            <div class="text-center text-white">
                <h1 class="display-4 fw-bolder">Create a Customer Account</h1>
                <p class="lead fw-normal text-white-50 mb-0"></p>
            </div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-8 mx-auto">
            @using (Html.BeginForm("CreateAccount", "Home", FormMethod.Post))
            {
                <div class="form-group">
                    <label for="emailinput">Email</label>
                    <input type="text" class="form-control" id="emailinput" name="Email" placeholder="aubie@auburn.edu"
                    maxlength="2000" required>
                    <small>Must be a valid email including an @@</small>
                </div>
                <div class="form-group">
                    <label for="passwordinput">Password</label>
                    <input type="text" class="form-control" id="passwordinput" name="Password" placeholder=""
                    maxlength="2000" required>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label for="firstinput">First</label>
                        <input type="text" class="form-control" id="firstinput" name="First" placeholder="" maxlength="50"
                        required>
                    </div>
                    <div class="col-4">
                        <label for="middleinput">Middle/Maiden</label>
                        <input type="text" class="form-control" id="middleinput" name="Middle" placeholder="Optional"
                        maxlength="50">
                    </div>
                    <div class="col-4">
                        <label for="lastinput">Last</label>
                        <input type="text" class="form-control" id="lastinput" name="Last" placeholder="" maxlength="50"
                        required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="addressinput">Address</label>
                    <input type="text" class="form-control" id="addressinput" name="Address" placeholder="" maxlength="2000"
                    required>
                </div>
                <button id="submit" type="submit" class="mt-3 btn btn-primary">Create Account</button>
            }
        </div>
    </div>
</div>

@section Scripts{
<script>
</script>
}